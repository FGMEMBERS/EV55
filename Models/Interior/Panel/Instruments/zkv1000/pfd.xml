      <and>
        <property>/instrumentation/zkv1000/pfd/status</property>
        <property>/instrumentation/zkv1000/pfd/hsi-360</property>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>hsi.arc</object-name>
    <condition>
      <and>
        <property>/instrumentation/zkv1000/pfd/status</property>
        <not>
          <property>/instrumentation/zkv1000/pfd/hsi-360</property>
        </not>
      </and>
    </condition>
  </animation>
  
  <!-- ATTITUDE INDICATOR -->
  <animation>
    <type>texmultiple</type>
    <object-name>ai.pitch.indicator</object-name>
    <transform>
      <subtype>textranslate</subtype>
      <property>/orientation/pitch-deg</property>
      <factor> 0.005 </factor>
      <center>
        <x> 0.5 </x>
        <y> 0.5 </y>
      </center>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
    <transform>
      <subtype>texrotate</subtype>
      <property>/orientation/roll-deg</property>
      <min> -180 </min>
      <max>  180 </max>
      <center>
        <x> 0.5 </x>
        <y> 0.5 </y>
      </center>
      <axis>
        <x> 0 </x>
        <y> 0 </y>
        <z>-1 </z>
      </axis>
    </transform>
  </animation>
  
  <animation>
    <type>texmultiple</type>
    <object-name>ai.background</object-name>
    <transform>
      <subtype>textranslate</subtype>
      <property>/orientation/pitch-deg</property>
      <factor> 0.003 </factor>
      <center>
        <x> 0.5 </x>
        <y> 0.5 </y>
      </center>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
    <transform>
      <subtype>texrotate</subtype>
      <property>/orientation/roll-deg</property>
      <min> -180 </min>
      <max>  180 </max>
      <center>
        <x> 0.5 </x>
        <y> 0.5 </y>
      </center>
      <axis>
        <x>  0 </x>
        <y>  0 </y>
        <z> -1 </z>
      </axis>
    </transform>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>ai.roll.ref</object-name>
    <property>/orientation/roll-deg</property>
    <center>
      <x-m>  0.061 </x-m>
      <y-m> -0.011 </y-m>
      <z-m>  0.027 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>ai.fd.bars</object-name>
    <condition>
      <property>/instrumentation/zkv1000/pfd/afcs/fd-bars-visible</property>
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>ai.fd.bars</object-name>
    <property>/autopilot/internal/target-roll-deg</property>
    <center>
      <x-m>  0.061 </x-m>
      <y-m> -0.011 </y-m>
      <z-m>  0.027 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>ai.fd.bars</object-name>
    <property>/orientation/roll-deg</property>
    <center>
      <x-m>  0.061 </x-m>
      <y-m> -0.011 </y-m>
      <z-m>  0.027 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>ai.fd.bars</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> 0.00135 </factor>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>ai.fd.bars</object-name>
    <property>/autopilot/internal/target-pitch-deg</property>
    <factor> 0.00135 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- AIRSPEED INDICATOR -->
  <animation>
    <type>textranslate</type>
    <object-name>asi.tape</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <factor> 0.0025 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>asi.cursor.100</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <step>100</step>
    <factor> 0.001 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>asi.cursor.010</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <step>10</step>
    <factor> 0.01 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>asi.cursor.001</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <factor> 0.1 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>infos.FLC</object-name>
    <object-name>asi.bug</object-name>
    <condition>
      <equals>
        <property>/autopilot/locks/pitch</property>
        <value>FLC</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>asi.bug</object-name>
    <property>/instrumentation/zkv1000/afcs/selected-ias-kt-diff</property>
    <interpolation>
      <entry><ind> -30 </ind><dep> -0.0331 </dep></entry>
      <entry><ind>   0 </ind><dep>  0.0000 </dep></entry>
      <entry><ind>  30 </ind><dep>  0.0331 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!-- ALTITUDE INDICATOR -->
  <animation>
    <type>textranslate</type>
    <object-name>alt.tape</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> 0.0000437 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>alt.cursor.10000</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <step> 10000 </step>
    <factor> -0.00001 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>alt.cursor.01000</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <step> 1000 </step>
    <factor> -0.0001 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>alt.cursor.00100</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <step> 100 </step>
    <factor> -0.001 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>alt.cursor.00011</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor> -0.01 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>infos.ALT</object-name>
    <object-name>alt.bug</object-name>
    <condition>
      <property>/instrumentation/zkv1000/pfd/afcs/alt-bug-visible</property>
    </condition>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>alt.bug</object-name>
    <property>/instrumentation/zkv1000/pfd/afcs/selected-alt-ft-diff</property>
    <interpolation>
      <entry><ind> -300 </ind><dep> -0.0358 </dep></entry>
      <entry><ind>    0 </ind><dep>  0.0000 </dep></entry>
