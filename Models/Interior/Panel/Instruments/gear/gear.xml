<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>gear.ac</path>


  <animation>
    <type>rotate</type>
    <object-name>Handle</object-name>
    <property>controls/gear/gear-down</property>
    <factor> 180 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> 0.0 </z-m>
    </center>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Handle</object-name>
    <action>
      <button> 0 </button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/gear/gear-down</property>
      </binding>
    </action>
  </animation>

</PropertyList>
